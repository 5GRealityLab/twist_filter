<launch>
    <arg name='filter_config'   default='$(find twist_filter)/config/default_fir.yaml' />
    <arg name='timeout'         default='0.25' />
    <arg name='filter_name'     default='fir_twist_filter' />

    <!-- Launch filter -->
    <node name='$(arg filter_name)' pkg='twist_filter' type='init_fir.py' output='screen'>
        <rosparam file="$(arg filter_config)" command="load" />
        <param name='input_timeout' value='$(arg timeout)' />
    </node>
</launch>